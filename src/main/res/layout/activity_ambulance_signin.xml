<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOne"
    tools:context=".AmbulanceSigninActivity">

    <EditText

        android:id="@+id/ambulance_name_signin"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ambulance_email_sign_in"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:hint="E-mail"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ambulance_email_sign_in"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/ambulance_signin_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ambulance_email_sign_in"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryDark"
        android:elevation="24dp"
        android:text="sign in"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ambulance_name_signin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="ENTER YOUR CREDENTIALS"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorTwo"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>