<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOne"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/user_sign_up_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_signin_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@color/colorTwo"
        android:elevation="24dp"
        android:shadowColor="@color/common_google_signin_btn_text_dark_focused"
        android:text="sign up as a user"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="16sp" />

    <Button
        android:id="@+id/user_signin_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/colorThree"
        android:elevation="24dp"
        android:shadowColor="@color/common_google_signin_btn_text_dark_focused"
        android:text="sign in"
        android:textSize="16sp" />

    <Button
        android:id="@+id/ambulance_sign_up_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_sign_up_btn"
        android:layout_marginBottom="20dp"
        android:background="@color/colorTwo"
        android:elevation="24dp"
        android:layout_centerHorizontal="true"
        android:shadowColor="@color/common_google_signin_btn_text_dark_focused"
        android:text="ambulance sign up"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="16sp" />

</RelativeLayout>