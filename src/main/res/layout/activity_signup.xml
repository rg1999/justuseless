<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".SignupActivity">

    <EditText
        android:id="@+id/user_name_signup"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_email_signup"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:elevation="0dp"
        android:hint="Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/user_email_signup"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_phone_number"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:elevation="0dp"
        android:hint="E-mail"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/user_phone_number"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:elevation="0dp"
        android:hint="Phone Number"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/user_signup_pass1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_phone_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:elevation="0dp"
        android:hint="Password"
        android:inputType="textPersonName|textPassword" />

    <EditText
        android:id="@+id/user_signup_pass2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_signup_pass1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:elevation="0dp"
        android:hint="Confirm Password"
        android:inputType="textPersonName|textPassword" />

    <Button
        android:id="@+id/user_signup_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_signup_pass2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryDark"
        android:elevation="24dp"
        android:text="sign up"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_name_signup"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="ENTER YOUR CREDENTIALS"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorTwo"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>