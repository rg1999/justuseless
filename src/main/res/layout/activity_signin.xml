<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7AAFF"
    tools:context=".SigninActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_name_sign_in"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="ENTER YOUR CREDENTIALS"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorTwo"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/user_name_sign_in"
        android:layout_width="250dp"
        android:layout_height="wrap_content"

        android:layout_above="@+id/user_pass_signin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:hint="E-mail"
        android:inputType="textPersonName" />

    <EditText

        android:id="@+id/user_pass_signin"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="Password"
        android:inputType="textPersonName|textPassword" />

    <Button
        android:id="@+id/user_signin_btn"
        android:layout_width="200dp"
android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_pass_signin"
        android:layout_marginTop="22dp"
        android:background="@color/colorPrimaryDark"
        android:elevation="24dp"
        android:text="sign in"
        android:textSize="16sp" />


</RelativeLayout>